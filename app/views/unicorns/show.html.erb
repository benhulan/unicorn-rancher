<h1><%= @unicorn.name %></h1>
<div id="background">
    <img src="http://wallpapercave.com/wp/ildJ2CY.jpg" alt="rainbow background" />
</div>

<div id="content">
    <p><%= @unicorn.name %> is in the <%= @location.name %></p>
    <ul>
            <li><strong>Gender:</strong> <%= @unicorn.gender %></li>
            <li><strong>Fave Food:</strong> <%= @unicorn.favorite_food %></li>
            <li><strong>Color:</strong> <%= @unicorn.color %></li>
        </ul>
    <img src="<%= @unicorn.image_url %>" alt="<%= @unicorn.name %>" width="200px" />
    <br />    
    <%= link_to "Move Me", edit_unicorn_path(@unicorn) %>
</div>

<footer>
    <hr>
    <% if @unicorn.id > 1 && @unicorn.id < @unicorns.count %>
        <%= link_to "Previous", unicorn_path(@unicorn.id - 1) %>
        <%= link_to "Next", unicorn_path(@unicorn.id + 1) %>
    <% elsif @unicorn.id == @unicorns.count %>
        <%= link_to "Previous", unicorn_path(@unicorn.id - 1) %>
        <%= link_to "Next", unicorn_path(1) %>
    <% elsif @unicorn.id == 1 %>
        <%= link_to "Previous", unicorn_path(@unicorns.count) %>
        <%= link_to "Next", unicorn_path(@unicorn.id + 1) %>
    <% end %>
    <br>
    <%= link_to "Locations", locations_path %><br />
    <%= link_to "Unicorns", unicorns_path %>
</footer>


